{
  "name": "nodelogger",
  "version": "1.0.0",
  "description": "A simple and optimized logging library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "BackView",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/backview/nodelogger.git"
  },
  "scripts": {
    "test": "del-cli ./lognode.log && jest --config jestconfig.json && del-cli ./lognode.log",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": ["NodeJS", "Logger", "Logging"],
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2",
    "del-cli": "^4.0.1"
  },
  "files": [
    "lib/**/*"
  ]
}
